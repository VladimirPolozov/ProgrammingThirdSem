        <views:SortingView></views:SortingView>
      </TabItem>
      <TabItem Header="СЛАУ" Padding="16px 8px" FontSize="11px">
        <views3:AlesView></views3:AlesView>
      </TabItem>
      <TabItem Header="МНК" Padding="16px 8px" FontSize="11px">
        <views4:LsmView></views4:LsmView>
